unit PwAendernFrm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Helpers;

type TPasswort = record
  md5Hash:string;
  md5Salt:string;
end;

type
  TPwAendernForm = class(TForm)
    Passwort1Edit: TEdit;
    Passwort2Edit: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    OkButton: TButton;
    Button1: TButton;
    procedure OkButtonClick(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private-Deklarationen }
  public
    Passwort:TPasswort;
    { Public-Deklarationen }
  end;

var
  PwAendernForm: TPwAendernForm;

implementation

{$R *.dfm}

{ TPwAendernForm }

procedure TPwAendernForm.Button1Click(Sender: TObject);
begin
  ModalResult := false;
  self.CloseModal;
end;

procedure TPwAendernForm.OkButtonClick(Sender: TObject);
var
  md5hash : string;
  md5salt:string;
begin
  if (Passwort1Edit.Text <> '') and (Passwort2Edit.Text <> '') and (Passwort1Edit.Text = Passwort2Edit.Text) then
  begin
    md5hash := helpers.getMD5Hash(Passwort1Edit.Text);
    md5salt := Helpers.getRandomString(32);
    self.Ergebnis := TStringList.Create;
    self.Ergebnis.Add(md5hash);
    self.Ergebnis.Add(md5salt);
    ModalResult := true;
    self.CloseModal;
  end
  else
  messageDlg('Die gewählten Passwörter stimmen nicht überein. Bitte wiederholen Sie die Eingabe!',mtError, [mbOK],0);
end;

end.
